# Environment Variables Template for Edge Functions

# CORS Configuration
# Comma-separated list of allowed origins for CORS requests
# Default: Local development origins (localhost:8080, localhost:5173, 127.0.0.1:8080, 127.0.0.1:5173)
# Production example: https://app.example.com,https://www.example.com
ALLOWED_ORIGINS=http://localhost:8080,http://localhost:5173,http://127.0.0.1:8080,http://127.0.0.1:5173

# Allow credentials (cookies, authorization headers) in CORS requests
# Default: true (required for authenticated endpoints)
# Set to 'false' for public endpoints that don't require authentication
ALLOW_CREDENTIALS=true

# Admin MFA Configuration
# Require MFA for admin access (recommended for production)
ADMIN_MFA_REQUIRED=true

# Minimum Authenticator Assurance Level for admin access
# 1 = Single factor, 2 = Multi-factor (TOTP, WebAuthn, SMS, etc.)
ADMIN_MIN_AAL=2

# Step-Up Authentication Configuration
# Maximum age (in seconds) for authentication events before requiring reauthentication
# Default: 600 (10 minutes)
# Recommended range: 300-1800 (5-30 minutes)
ADMIN_STEP_UP_MAX_AGE_SECONDS=600
